{
  "info": {
    "name": "Feature 2 - Booking & Tenant Management",
    "description": "Comprehensive testing collection for Feature 2 endpoints",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseURL",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "userToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "tenantToken",
      "value": "",
      "type": "string"
    },
    {
      "key": "bookingId",
      "value": "1",
      "type": "string"
    },
    {
      "key": "roomId",
      "value": "1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Booking Management",
      "item": [
        {
          "name": "Create Booking",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"roomId\": 1,\n  \"checkIn\": \"2025-02-01\",\n  \"checkOut\": \"2025-02-03\",\n  \"totalGuests\": 2,\n  \"unitCount\": 1,\n  \"notes\": \"Test booking\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/bookings",
              "host": ["{{baseURL}}"],
              "path": ["api", "bookings"]
            }
          },
          "response": []
        },
        {
          "name": "Get User Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/bookings?page=1&limit=10&status=waiting_for_payment",
              "host": ["{{baseURL}}"],
              "path": ["api", "bookings"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "waiting_for_payment"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Get Booking Details",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/bookings/{{bookingId}}",
              "host": ["{{baseURL}}"],
              "path": ["api", "bookings", "{{bookingId}}"]
            }
          },
          "response": []
        },
        {
          "name": "Upload Payment Proof",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              }
            ],
            "body": {
              "mode": "formdata",
              "formdata": [
                {
                  "key": "paymentMethod",
                  "value": "manual_transfer",
                  "type": "text"
                },
                {
                  "key": "file",
                  "type": "file",
                  "src": []
                }
              ]
            },
            "url": {
              "raw": "{{baseURL}}/api/bookings/{{bookingId}}/upload-payment",
              "host": ["{{baseURL}}"],
              "path": ["api", "bookings", "{{bookingId}}", "upload-payment"]
            }
          },
          "response": []
        },
        {
          "name": "Cancel Booking",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{userToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cancelReason\": \"Change of plans\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/bookings/{{bookingId}}/cancel",
              "host": ["{{baseURL}}"],
              "path": ["api", "bookings", "{{bookingId}}", "cancel"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Tenant Management",
      "item": [
        {
          "name": "Get Tenant Bookings",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/tenant/bookings?page=1&limit=10&status=waiting_for_confirmation",
              "host": ["{{baseURL}}"],
              "path": ["api", "tenant", "bookings"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "status",
                  "value": "waiting_for_confirmation"
                }
              ]
            }
          },
          "response": []
        },
        {
          "name": "Confirm Payment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"confirmationNotes\": \"Payment confirmed, thank you!\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/tenant/bookings/{{bookingId}}/confirm",
              "host": ["{{baseURL}}"],
              "path": ["api", "tenant", "bookings", "{{bookingId}}", "confirm"]
            }
          },
          "response": []
        },
        {
          "name": "Reject Payment",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rejectionReason\": \"Payment proof unclear\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/tenant/bookings/{{bookingId}}/reject",
              "host": ["{{baseURL}}"],
              "path": ["api", "tenant", "bookings", "{{bookingId}}", "reject"]
            }
          },
          "response": []
        },
        {
          "name": "Send Reminder",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"reminderType\": \"payment\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/tenant/bookings/{{bookingId}}/reminder",
              "host": ["{{baseURL}}"],
              "path": ["api", "tenant", "bookings", "{{bookingId}}", "reminder"]
            }
          },
          "response": []
        },
        {
          "name": "Cancel User Order",
          "request": {
            "method": "PATCH",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"cancelReason\": \"Property maintenance required\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/tenant/bookings/{{bookingId}}/cancel",
              "host": ["{{baseURL}}"],
              "path": ["api", "tenant", "bookings", "{{bookingId}}", "cancel"]
            }
          },
          "response": []
        }
      ]
    },
    {
      "name": "Cron Management",
      "item": [
        {
          "name": "Get Scheduled Tasks Status",
          "request": {
            "method": "GET",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/cron/status",
              "host": ["{{baseURL}}"],
              "path": ["api", "cron", "status"]
            }
          },
          "response": []
        },
        {
          "name": "Trigger Auto-Cancel",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/cron/trigger-auto-cancel",
              "host": ["{{baseURL}}"],
              "path": ["api", "cron", "trigger-auto-cancel"]
            }
          },
          "response": []
        },
        {
          "name": "Schedule Booking Cancel",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              },
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"bookingId\": {{bookingId}},\n  \"bookingNo\": \"BK123456ABC\",\n  \"deadlineDate\": \"{{$isoTimestamp}}\"\n}"
            },
            "url": {
              "raw": "{{baseURL}}/api/cron/schedule-cancel",
              "host": ["{{baseURL}}"],
              "path": ["api", "cron", "schedule-cancel"]
            }
          },
          "response": []
        },
        {
          "name": "Cancel Booking Tasks",
          "request": {
            "method": "DELETE",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/cron/booking/{{bookingId}}/tasks",
              "host": ["{{baseURL}}"],
              "path": ["api", "cron", "booking", "{{bookingId}}", "tasks"]
            }
          },
          "response": []
        },
        {
          "name": "Stop All Tasks",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Authorization",
                "value": "Bearer {{tenantToken}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseURL}}/api/cron/stop-all",
              "host": ["{{baseURL}}"],
              "path": ["api", "cron", "stop-all"]
            }
          },
          "response": []
        }
      ]
    }
  ]
}
